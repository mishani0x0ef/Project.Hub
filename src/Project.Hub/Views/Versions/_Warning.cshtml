@using Microsoft.Extensions.Options;
@using Project.Hub.Settings;
@inject IOptions<AppConfiguration> AppConfiguration
@model System.DateTimeOffset

<div class="panel panel-warning">
    <div class="panel-heading">
        <h3 class="panel-title">Warning</h3>
    </div>
    <div class="panel-body text-justify">
        <p>
            <span>Versions last updated at <strong>@Model.ToString("dd MMM HH:mm")</strong>.</span>
            <span>Info updating regulary. It could take 
            <strong>up to @AppConfiguration.Value.VersionsCacheExpirationInHours hours</strong> 
            for update.</span>
        </p>
        <p>Please, be patient and enjoy your day 🥂.</p>
    </div>
</div>