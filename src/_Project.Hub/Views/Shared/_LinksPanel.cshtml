@model IEnumerable<Project.Hub.Config.Entities.SiteLink>

@if (Model != null && Model.Any())
{
    <div class="row">
        <div class="list-panel col-xs-12">
            
            <div class="list-panel-header col-xs-12">
                <div class="col-xs-4 col-sm-3">
                    <strong class="text-uppercase">Name</strong>
                    <span class="glyphicon glyphicon-sort-by-alphabet"></span>
                </div>
                <div class="col-xs-8 col-sm-9">
                    <strong class="text-uppercase">Description</strong>
                </div>
            </div>

            <div class="list-panel-content col-xs-12">
                @foreach (var site in Model.OrderBy(s => s.Name))
                {
                    <a class="list-panel-item col-xs-12" href="@site.Url" target="_blank">
                        <div class="col-xs-12 col-sm-3">
                            @if (!site.ShowFavicon || string.IsNullOrEmpty(site.Favicon))
                            {
                                <span class="glyphicon glyphicon-link"></span>
                            }
                            else
                            {
                                <img class="list-panel-item-icon" src="@site.Favicon" alt="icon" />
                            } 
                            <span>@site.Name</span>
                        </div>
                        <div class="col-xs-12 col-sm-9">
                            <span class="text-light">@site.Description</span>                            
                        </div>
                    </a>
                }
            </div>

        </div>
    </div>
}
else
{
    <span class="text-center lead">No sites to display.</span>
}
